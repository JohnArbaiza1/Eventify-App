<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.InvitacionesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/aclonica"
            android:text="Invitations"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="409dp"
            android:layout_height="49dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="En este apartado puedes invitar a tus amigos a los eventos que has publicado en la App."
            android:textSize="17sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="390dp"
            android:layout_height="490dp"
            android:background="@drawable/fondo_publiaciones"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            app:layout_constraintVertical_bias="0.367">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="358dp"
                android:layout_height="54dp"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:text="Por favor llene los datos que se le piden a continuaciÃ³n "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="353dp"
                android:layout_height="59dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/fondo_input"
                android:ems="10"
                android:hint="Correo Electronico:"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.513"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />

            <EditText
                android:id="@+id/txtNameInvitado"
                android:layout_width="353dp"
                android:layout_height="59dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/fondo_input"
                android:ems="10"
                android:hint="Nombre:"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

            <EditText
                android:id="@+id/txtAsunto"
                android:layout_width="353dp"
                android:layout_height="59dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/fondo_input"
                android:ems="10"
                android:hint="Asunto:"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.513"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNameInvitado" />

            <Button
                android:id="@+id/btnEnviarInvitacion"
                android:layout_width="353dp"
                android:layout_height="59dp"
                android:layout_marginTop="16dp"
                android:text="Invitar"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.513"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtAsunto" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="42dp"
                android:layout_height="39dp"
                android:background="@android:color/transparent"
                android:src="@drawable/send"
                app:layout_constraintBottom_toBottomOf="@+id/btnEnviarInvitacion"
                app:layout_constraintEnd_toEndOf="@+id/btnEnviarInvitacion"
                app:layout_constraintHorizontal_bias="0.34"
                app:layout_constraintStart_toStartOf="@+id/btnEnviarInvitacion"
                app:layout_constraintTop_toTopOf="@+id/btnEnviarInvitacion"
                app:layout_constraintVertical_bias="0.55" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>